---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
---

<Layout title="Icons - Styleguide">
  <main class="theme-bg min-h-screen">
    <Container>
      <!-- Header Section -->
      <div class="py-16">
        <!-- Page Title -->
        <div class="text-center">
          <h1 class="text-5xl lg:text-6xl font-bold theme-headline mb-4">
            Icon System
          </h1>
          <p class="text-xl theme-paragraph max-w-3xl mx-auto">
            Comprehensive collection of icons available through the astro-icon system.
          </p>
        </div>
      </div>

      <!-- Simple message -->
      <div class="text-center py-16">
        <p class="theme-paragraph">Icons page working correctly</p>
      </div>
    </Container>
  </main>
</Layout>