---
import { getCollection } from "astro:content";
import { Picture } from "astro:assets";
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";
import productsData from "@/data/products.json";

// Filter products entries with 'draft: false' & date before current date
const publishedProductsEntries = await getCollection("products", ({ data }) => {
  return !data.draft && data.publishDate < new Date();
});

// Sort content entries by publication date
publishedProductsEntries.sort(function (a, b) {
  return b.data.publishDate.valueOf() - a.data.publishDate.valueOf();
});
---

<Layout title="Products">
  <Container>
    <Sectionhead>
      <Fragment slot="title">{productsData.title}</Fragment>
      <Fragment slot="desc">
        {productsData.description}
      </Fragment>
    </Sectionhead>
    <main class="mt-16">
      <ul class="grid gap-16 max-w-4xl mx-auto">
        {
          publishedProductsEntries.map((productEntry, index) => (
            <li>
              <a href={`/products/${productEntry.slug}`}>
                <div class="grid md:grid-cols-2 gap-5 md:gap-10 items-center">
                  <Picture
                    src={productEntry.data.image.src}
                    alt={productEntry.data.image.alt}
                    sizes="(max-width: 800px) 100vw, 800px"
                    width={800}
                    height={600}
                    loading={index <= 2 ? "eager" : "lazy"}
                    decoding={index <= 2 ? "sync" : "async"}
                    class="w-full rounded-md object-cover object-center bg-white"
                  />
                  <div>
                    <span class="uppercase tracking-wider text-sm font-medium" style="color: var(--color-theme-button);">
                      {productEntry.data.category}
                    </span>

                    <h2 class="text-3xl font-semibold leading-snug tracking-tight mt-1 theme-headline">
                      {productEntry.data.title}
                    </h2>

                    <div class="flex gap-2 mt-3 items-center">
                      <span class="text-2xl font-bold" style="color: var(--color-theme-button);">
                        {productEntry.data.price}
                      </span>
                      <span class="theme-paragraph">â€¢</span>
                      <time
                        class="theme-paragraph"
                        datetime={productEntry.data.publishDate.toISOString()}>
                        {productEntry.data.publishDate.toDateString()}
                      </time>
                    </div>
                    
                    <p class="theme-paragraph mt-2">
                      {productEntry.data.snippet}
                    </p>
                  </div>
                </div>
              </a>
            </li>
          ))
        }
      </ul>
    </main>
  </Container>
</Layout>